<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pokemongostats"
    android:versionCode="12"
    android:versionName="0.3.2" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.pokemongostats.view.PkmnGoStatsApplication"
        android:icon="@drawable/icon_app"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/PokemonGoStatsTheme" >
        <!-- Services -->
        <service
            android:name="com.pokemongostats.controller.services.OverlayService"
            android:icon="@drawable/icon_app"
            android:label="overlay"
            android:stopWithTask="true" />
        <service
            android:name="com.pokemongostats.controller.services.DownloadUpdateService"
            android:icon="@drawable/icon_app"
            android:label="Download PokemonGoStats service"
            android:stopWithTask="true" />
        
        <!-- Activity -->
        <activity
            android:name="com.pokemongostats.view.activities.LauncherActivity"
            android:theme="@style/Theme.Invisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pokemongostats.view.activities.PokedexActivity" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pokemongostats.view.activities.DownloadActivity" android:theme="@style/Theme.Invisible" />
    </application>

</manifest>