<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="PokemonGoStatsTheme" parent="android:Theme.Holo"></style>

    <style name="Theme.Transparent" parent="android:Theme.Holo">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/bg_no_stretch</item>
    </style>

    <style name="Theme.Invisible" parent="android:Theme.Holo">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Section style -->
    <style name="SectionTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/section_title_txt_color</item>
        <item name="android:background">@color/section_title_bg_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- Sub section style -->
    <style name="SubSectionTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/sub_section_title_txt_color</item>
        <item name="android:background">@color/sub_section_title_bg_color</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <!-- Radio button style -->
    <style name="RadioButtonStyle" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/radio_team_background</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:padding">4sp</item>
    </style>

    <!-- Type text style -->
    <style name="TypeTextViewStyle" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/type_round</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">0sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="TypeListViewStyle" parent="TypeTextViewStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="EffectivenessSectionStyle" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/effectiveness</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="WeaknessSectionStyle" parent="EffectivenessSectionStyle">
        <item name="android:textColor">@color/weakness</item>
    </style>

    <style name="SuperWeaknessSectionStyle" parent="EffectivenessSectionStyle">
        <item name="android:textColor">@color/super_weakness</item>
    </style>

    <style name="ResistanceSectionStyle" parent="EffectivenessSectionStyle">
        <item name="android:textColor">@color/resistance</item>
    </style>

    <style name="SuperResistanceSectionStyle" parent="EffectivenessSectionStyle">
        <item name="android:textColor">@color/super_resistance</item>
    </style>

</resources>