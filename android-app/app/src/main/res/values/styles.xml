<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.CardView" parent="Widget.MaterialComponents.CardView">
        <!-- On remet le theme dark par dÃ©faut sinon MaterialComponents met Theme.colorPrimary-->
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="AppTheme.IncomingDataCardView" parent="AppTheme.CardView">
        <item name="checkedIconGravity">TOP_START</item>
        <item name="checkedIconSize">14dp</item>
        <item name="checkedIconMargin">4dp</item>
        <item name="android:checkable">true</item>
    </style>

    <!-- Section style -->
    <style name="AppTheme.TextViewSection" parent="android:Widget.TextView">
        <item name="android:textColor">@color/section_title_txt_color</item>
        <item name="android:background">@color/section_title_bg_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">5sp</item>
    </style>

    <!-- Sub section style -->
    <style name="AppTheme.TextViewSousSection" parent="android:Widget.TextView">
        <item name="android:textColor">@color/sub_section_title_txt_color</item>
        <item name="android:background">@color/sub_section_title_bg_color</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:paddingLeft">3sp</item>
    </style>

    <!-- table label style -->
    <style name="TableLabelTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/tablelabel_txt_color</item>
        <item name="android:background">@drawable/bg_tablelabel</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">3sp</item>
    </style>

    <!-- table field style -->
    <style name="TableFieldTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/tablefield_txt_color</item>
        <item name="android:background">@drawable/bg_tablefield</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">4.5sp</item>
    </style>

    <!-- Type text style -->
    <style name="TypeTextViewStyle" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">3sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Tab" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/onglet</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:minHeight">32dp</item>
    </style>

    <style name="AppTheme.CrossbarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressTintMode">src_in</item>
        <item name="android:progressTint">@color/progressTint_progress_bar</item>
        <item name="android:secondaryProgressTintMode">src_in</item>
        <item name="android:secondaryProgressTint">@color/secondaryProgressTint_progress_bar</item>
        <item name="android:minHeight">15dp</item>
    </style>

    <style name="AppTheme.MaterialBtn" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>