<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="TextViewTheme" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Theme.Invisible" parent="@style/Theme.AppCompat">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Section style -->
    <style name="SectionTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/section_title_txt_color</item>
        <item name="android:background">@color/section_title_bg_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingLeft">5sp</item>
    </style>

    <!-- Sub section style -->
    <style name="SubSectionTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/sub_section_title_txt_color</item>
        <item name="android:background">@color/sub_section_title_bg_color</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:paddingLeft">3sp</item>
    </style>

    <!-- table label style -->
    <style name="TableLabelTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/tablelabel_txt_color</item>
        <item name="android:background">@drawable/bg_tablelabel</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">3sp</item>
    </style>

    <!-- table field style -->
    <style name="TableFieldTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/tablefield_txt_color</item>
        <item name="android:background">@drawable/bg_tablefield</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">4.5sp</item>
    </style>

    <!-- Radio button style -->
    <style name="RadioButtonStyle" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/radio_team_background</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:padding">4sp</item>
    </style>

    <!-- Type text style -->
    <style name="TypeTextViewStyle" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">3sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TypeListViewStyle" parent="TypeTextViewStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="EffectivenessSectionStyle" parent="android:Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/effectiveness</item>
    </style>

    <style name="WeaknessSectionStyle" parent="EffectivenessSectionStyle">
        <item name="android:textColor">@color/weakness</item>
    </style>

    <style name="SuperWeaknessSectionStyle" parent="EffectivenessSectionStyle">
        <item name="android:textColor">@color/super_weakness</item>
    </style>

    <style name="ResistanceSectionStyle" parent="EffectivenessSectionStyle">
        <item name="android:textColor">@color/resistance</item>
    </style>

    <style name="SuperResistanceSectionStyle" parent="EffectivenessSectionStyle">
        <item name="android:textColor">@color/super_resistance</item>
    </style>

</resources>