<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE xml>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.pokemongostats"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_no_stretch"
    android:orientation="vertical" >

    <AutoCompleteTextView
        android:id="@+id/search_pokemon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:completionThreshold="1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/pkmn_desc_section_title"
                style="@style/SectionTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_pokemon"
                android:text="@string/description" >
            </TextView>

            <com.pokemongostats.view.commons.PkmnDescView
                android:id="@+id/selected_pkmn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                style="@style/SectionTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/moves" />

            <com.pokemongostats.view.expandables.MoveExpandable
                android:id="@+id/pkmn_desc_quickmoves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/quickmove" />

            <com.pokemongostats.view.expandables.MoveExpandable
                android:id="@+id/pkmn_desc_chargemoves"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="@string/chargemove" />

            <TextView
                android:id="@+id/weaknesses_and_resistances_section_title"
                style="@style/SectionTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weaknesses_and_resistances_section" >
            </TextView>

            <LinearLayout
                android:id="@+id/type_weaknesses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <!-- super weaknesses -->

                <com.pokemongostats.view.expandables.TypeExpandable
                    android:id="@+id/list_super_weaknesses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    app:title="@string/super_weaknesses"
                    app:titleStyle="@style/SuperWeaknessSectionStyle" />

                <!-- weaknesses -->

                <com.pokemongostats.view.expandables.TypeExpandable
                    android:id="@+id/list_weaknesses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    app:title="@string/weaknesses"
                    app:titleStyle="@style/WeaknessSectionStyle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/type_resistances"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/type_weaknesses" >

                <!-- resistances -->

                <com.pokemongostats.view.expandables.TypeExpandable
                    android:id="@+id/list_resistances"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    app:title="@string/resistances"
                    app:titleStyle="@style/ResistanceSectionStyle" />

                <!-- super resistances -->

                <com.pokemongostats.view.expandables.TypeExpandable
                    android:id="@+id/list_super_resistances"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    app:title="@string/super_resistances"
                    app:titleStyle="@style/SuperResistanceSectionStyle" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>