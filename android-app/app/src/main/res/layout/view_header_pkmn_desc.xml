<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/pkmn_desc_header_name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/name"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/pkmn_desc_header_img"
        android:layout_width="0dp"
        android:layout_height="40sp"
        android:layout_gravity="center"
        android:layout_weight="0.3"
        android:gravity="center"
        android:text="Img"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/pkmn_desc_header_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.6"
        android:gravity="center"
        android:text="@string/types"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/pkmn_desc_header_base_attack"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.25"
        android:gravity="center"
        android:text="@string/base_attack"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/pkmn_desc_header_base_defense"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.25"
        android:gravity="center"
        android:text="@string/base_defense"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/pkmn_desc_header_base_stamina"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.25"
        android:gravity="center"
        android:text="@string/base_stamina"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/pkmn_desc_header_max_cp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.25"
        android:gravity="center"
        android:text="@string/max_cp"
        android:textColor="@android:color/white"
        android:visibility="gone" />

</merge>