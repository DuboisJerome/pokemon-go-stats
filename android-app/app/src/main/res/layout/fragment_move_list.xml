<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/list_sort_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.pokemongostats.view.commons.FilterMoveView
        android:id="@+id/filter_move_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp" />

    <TextView
        style="@style/SectionTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/chargemove" />

    <com.pokemongostats.view.rows.MoveHeaderView
        android:id="@+id/movelist_chargemoves_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/list_chargemove_found"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <include
        android:id="@+id/empty_charge_list_view"
        layout="@layout/empty_list_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <TextView
        style="@style/SectionTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/quickmove" />

    <com.pokemongostats.view.rows.MoveHeaderView
        android:id="@+id/movelist_quickmoves_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/list_quickmove_found"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <include
        android:id="@+id/empty_quick_list_view"
        layout="@layout/empty_list_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

</LinearLayout>