<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="status"
            type="com.pokemongostats.model.bean.UpdateStatus" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <ProgressBar
            android:id="@+id/progressbar"
            android:min="0"
            android:max="100"
            android:progress="@{status.progress}"
            android:secondaryProgress="@{status.secondaryProgress}"
            style="@style/CustomProgressBarHorizontal"
            android:minHeight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/CardView"/>
        <TextView
            android:id="@+id/textViewMainProgress"
            android:text="@{status.mainMsg}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textViewSecondaryProgress"
            android:text="@{status.secondaryMsg}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</layout>